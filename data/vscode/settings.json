{
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "off",

  "debug.internalConsoleOptions": "neverOpen",
  "debug.toolBarLocation": "docked",

  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "beforeWhitespace",
  "editor.autoSurround": "never",
  "editor.codeLens": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.folding": false,
  "editor.fontFamily": "Hack",
  "editor.formatOnPaste": false,
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.renderControlCharacters": true,
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "boundary",
  "editor.roundedSelection": false,
  "editor.rulers": [ 80, 100, 120 ],

  "explorer.autoReveal": false,
  "explorer.openEditors.visible": 0,

  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true,

  "git.enableStatusBarSync": false,

  "gulp.autoDetect": "off",

  "files.defaultLanguage": "markdown",
  "files.hotExit": "onExitAndWindowClose",
  "files.simpleDialog.enable": true,

  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.rendererType": "experimentalWebgl",
  "terminal.integrated.scrollback": 5000,
  "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\6\\pwsh.exe",
  "terminal.integrated.splitCwd": "initial",

  "window.openFoldersInNewWindow": "on",
  "window.restoreWindows": "all",
  "window.title": "${rootName}${separator}${activeEditorShort}${separator}${appName}",
	"window.titleBarStyle": "native",

	"workbench.colorCustomizations": {
		"[Default Light+]": {
			"terminal.selectionBackground": "#add6ff"
		},
		"[Visual Studio Light]": {
			"terminal.selectionBackground": "#add6ff"
		},
		"[Sapphire]": {
			"terminal.selectionBackground": "#153958"
		},
		"[Topaz (Dim)]": {
			"terminal.selectionBackground": "#42400f"
		}
  },
  
  "workbench.colorTheme": "Sapphire",
  "workbench.dialogs.useSimplified": "true",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.closeEmptyGroups": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.settings.editor": "json",
  "workbench.settings.openDefaultSettings": false,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,

  // Languages
  "markdown.preview.scrollEditorWithPreview": false,
  "[markdown]": {
    "editor.quickSuggestions": false
  },

  // Extensions
  "comments.openPanel": "neverOpen",
  "errorLens.errorForeground": "#da6771",	
  "errorLens.errorBackground": "#da677140",	
  "errorLens.warningForeground": "#cca700",	
  "errorLens.warningBackground": "#cca70040",
  "githubPullRequests.remotes": [
    "origin",
    "ups"
  ],
  "material-icon-theme.showReloadMessage": false,
  "material-icon-theme.showWelcomeMessage": false,
  "material-icon-theme.files.associations": {
    ".eslintrc": "json",
    "appveyor.yml": "yaml",
    ".travis.yml": "yaml",
    ".mention-bot": "git",
    ".yarnrc": "nodejs",
    "yarn.lock": "nodejs",
    "mocha.opts": "nodejs",
    "gulpfile.js": "nodejs",
    "webpack.config.js": "nodejs",
    ".editorconfig": "settings",
    "Procfile": "settings",
    ".mailmap": "settings",
    ".npmrc": "nodejs",
    ".npmignore": "nodejs",
    "**.md": "document",
    "**.txt": "document",
    "LICENSE": "document",
    "azure-pipelines.yml": "settings"
  },
  "material-icon-theme.folders.associations": {
    "src": "src"
  },
  "material-icon-theme.folders.theme": "classic",
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "color": "#399EF4",
      "backgroundColor": "transparent",
      "overviewRulerColor": "transparent"
    },
    {
      "text": "FIXME:",
      "color": "#399EF4",
      "backgroundColor": "transparent",
      "overviewRulerColor": "transparent"
    },
    {
      "text": "HACK:",
      "color": "#DA6771",
      "backgroundColor": "transparent",
      "overviewRulerColor": "transparent"
    }
  ]
}
