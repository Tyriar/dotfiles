{
  "debug.internalConsoleOptions": "neverOpen",

  "editor.autoClosingBrackets": false,
  "editor.codeLens": false,
  "editor.folding": false,
  "editor.fontFamily": "Hack",
  "editor.formatOnPaste": false,
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.renderControlCharacters": true,
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "boundary",
  "editor.roundedSelection": false,
  "editor.rulers": [ 80, 100, 120 ],

  "explorer.autoReveal": false,
  "explorer.openEditors.visible": 0,

  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": true,

  "files.defaultLanguage": "markdown",
  "files.hotExit": "onExitAndWindowClose",

  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.scrollback": 5000,
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",

  "window.restoreWindows": "all",
  "window.title": "${rootPath}${separator}${activeEditorName}${separator}${appName}",

  "workbench.colorCustomizations": {
  },
  "workbench.colorTheme": "Sapphire",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.statusBar.feedback.visible": false,

  // Languages
  "markdown.preview.scrollEditorWithPreview": false,
  "[markdown]": {
    "editor.quickSuggestions": false
  },

  // Extensions
  "gitProjectManager.baseProjectsFolders": [
    "$HOME/dev",
    "%USERPROFILE%\\Documents\\dev"
  ],
  "gitProjectManager.maxDepthRecursion": 2,
  "material-icon-theme.showReloadMessage": false,
  "material-icon-theme.showWelcomeMessage": false,
  "material-icon-theme.folders.associations": {
    "src": "src"
  },

  "material-icon-theme.folders.theme": "classic",
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "color": "#399EF4",
      "backgroundColor": "transparent"
    },
    {
      "text": "HACK:",
      "color": "#DA6771",
      "backgroundColor": "transparent"
    }
  ]
}
